<h3 class="<%= network.to_s == 'pts' ? 'pull-right' : '' %>"><%= network.upcase %></h3>
<table class="table table-striped table-condensed table-hover overview" data-network="<%= network %>">
  <tbody>
    <th>Donations</th>
    <th>&nbsp;</th>
    <tr>
      <td>Total Funded</td>
      <td><%= dcp(@play_summary[network][:total], network) %></td>
    </tr>
    <tr>
      <td>Total Transactions</td>
      <td><%= number_with_delimiter @play_summary[network][:count] %></td>
    </tr>
    <tr>
      <td>Daily Average Amount</td>
      <td><%= dcp(@play_summary[network][:total].to_i / 60, network) %></td>
    </tr>
    <th>Issuance</th>
    <th>&nbsp;</th>
    <tr>
      <td>Total Days</td>
      <td>28</td>
    </tr>
    <tr>
      <td>Total PLS Issued</td>
      <td><%= dcp(PlayCrowdfund.total_issued(network) * 60, "note") %></td>
    </tr>

  </tbody>
</table>